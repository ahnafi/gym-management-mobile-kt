<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    tools:context=".ui.membershippackages.MembershipPackageDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Image -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/ivPackageDetailImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/exercise_24dp" />

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="@drawable/circle_background_primary"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                app:tint="@android:color/white"
                android:backgroundTint="@color/myred"/>

            <!-- Package Status Badge -->
            <TextView
                android:id="@+id/tvDetailStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                android:background="@color/myredlight"
                android:text="AKTIF"
                android:textColor="@color/myred"
                android:textStyle="bold"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />
        </FrameLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Package Code -->
            <TextView
                android:id="@+id/tvDetailCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_background_primary"
                android:text="MP-001"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="12sp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/myred"/>

            <!-- Package Name -->
            <TextView
                android:id="@+id/tvDetailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Premium Package"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/myblack"
                android:layout_marginBottom="8dp" />

            <!-- Package Slug -->
            <TextView
                android:id="@+id/tvDetailSlug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="premium-package"
                android:textSize="14sp"
                android:textColor="@color/myred"
                android:layout_marginBottom="20dp" />

            <!-- Package Details Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <!-- Duration Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/mybg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/av_timer_24dp"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/myred" />

                        <TextView
                            android:id="@+id/tvDetailDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 Bulan"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/myred"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Durasi"
                            android:textSize="12sp"
                            android:textColor="@color/myblack"
                            android:alpha="0.7" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Price Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/mybg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/book_24dp"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/myred" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rp "
                                android:textSize="14sp"
                                android:textColor="@color/myred"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvDetailPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500.000"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/myred" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Harga"
                            android:textSize="12sp"
                            android:textColor="@color/myblack"
                            android:alpha="0.7" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Description Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/myblack"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Akses unlimited ke semua fasilitas gym, kelas premium, dan personal trainer dengan fasilitas terlengkap untuk mendukung program fitness Anda."
                android:textSize="14sp"
                android:textColor="@color/myblack"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginBottom="20dp" />

            <!-- Package Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <!-- Created Date -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dibuat"
                        android:textSize="12sp"
                        android:textColor="@color/myblack"
                        android:alpha="0.7"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvDetailCreatedAt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 Okt 2025"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/myblack" />
                </LinearLayout>

                <!-- Updated Date -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diperbarui"
                        android:textSize="12sp"
                        android:textColor="@color/myblack"
                        android:alpha="0.7"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvDetailUpdatedAt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 Okt 2025"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/myblack" />
                </LinearLayout>
            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSelectPackage"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Pilih Paket Ini"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:backgroundTint="@color/myred"
                    app:cornerRadius="12dp"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSharePackage"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    app:icon="@drawable/ic_sync"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/myred"
                    app:iconTint="@color/myred" />
            </LinearLayout>

        </LinearLayout>

        <!-- Loading Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBarDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>