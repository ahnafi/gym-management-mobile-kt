<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_background">

        <!-- Package Image -->
        <ImageView
            android:id="@+id/ivPackageImage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:background="@drawable/box_background"
            android:src="@drawable/exercise_24dp" />

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/mylight">

            <!-- Package Name -->
            <TextView
                android:id="@+id/tvPackageName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Premium Package"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/myblack"
                android:layout_marginBottom="8dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Price and Duration Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Price -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp "
                        android:textSize="14sp"
                        android:textColor="@color/myred"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPackagePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500.000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/myred" />
                </LinearLayout>

                <!-- Duration -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"

                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/av_timer_24dp"
                        android:layout_marginEnd="4dp"
                        app:tint="@color/myred" />

                    <TextView
                        android:id="@+id/tvPackageDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Bulan"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/myred" />
                </LinearLayout>
            </LinearLayout>

            <!-- Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetail"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="Lihat Detail"
                android:textStyle="bold"
                android:backgroundTint="@color/myred"
                app:cornerRadius="12dp" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>