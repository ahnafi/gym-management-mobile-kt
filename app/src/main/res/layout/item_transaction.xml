<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Transaction Code and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Credit Card Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/credit_card_24dp"
                android:layout_marginEnd="12dp"
                app:tint="@color/myred" />

            <!-- Transaction Code -->
            <TextView
                android:id="@+id/tvTransactionCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TMP-001-20251005-U1-ABC"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/myblack"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Payment Status Badge -->
            <TextView
                android:id="@+id/tvPaymentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menunggu"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/myred"
                android:background="@color/myredlight"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Transaction Type and Item Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Transaction Type Badge -->
            <TextView
                android:id="@+id/tvPurchasableType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paket Membership"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:layout_marginEnd="12dp" />

            <!-- Item Name -->
            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Premium Package"
                android:textSize="14sp"
                android:textColor="@color/myblack"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Amount and Date Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <!-- Amount -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp "
                    android:textSize="14sp"
                    android:textColor="@color/myred"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500.000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/myred" />
            </LinearLayout>

            <!-- Created Date -->
            <TextView
                android:id="@+id/tvCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05 Okt 2025"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mybg"
            android:layout_marginVertical="12dp" />

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewDetail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Lihat Detail"
            android:textSize="12sp"
            android:textStyle="bold"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:strokeColor="@color/myred"
            android:textColor="@color/myred"
            app:cornerRadius="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>